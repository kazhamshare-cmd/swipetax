rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // SwipeTax transactions - users can only access their own data
    match /swipetax_transactions/{transactionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // SwipeTax users - users can only access their own profile
    match /swipetax_users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // SwipeTax tax returns - users can only access their own tax returns
    match /swipetax_tax_returns/{returnId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // SwipeTax deductions - users can only access their own deductions
    match /swipetax_deductions/{deductionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
